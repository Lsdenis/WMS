<baseWindow:BaseWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:baseWindow="clr-namespace:WMS.CustomControls.Controls.BaseWindow;assembly=WMS.CustomControls"
        xmlns:Buttons="clr-namespace:WMS.CustomControls.Controls.Buttons;assembly=WMS.CustomControls" xmlns:Controls="clr-namespace:WMS.CustomControls.Controls;assembly=WMS.CustomControls" xmlns:CustomSearchTextBox="clr-namespace:WMS.CustomControls.Controls.CustomSearchTextBox;assembly=WMS.CustomControls" x:Class="WMS.Presentation.Windows.GoodsWindow"
        Title="GoodsWindow" Height="422" Width="490">
	<Grid>
		<ListView x:Name="lvGoods" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left" Height="265" VerticalAlignment="Top" Width="456" Margin="10,77,0,0">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
					<GridViewColumn Header="Consignment" Width="150" DisplayMemberBinding="{Binding Consignment}"/>
					<GridViewColumn Header="Count" Width="48" DisplayMemberBinding="{Binding Count}"/>
					<GridViewColumn Header="Adding date" Width="100" DisplayMemberBinding="{Binding AddingDateString}"/>
				</GridView>
			</ListView.View>
		</ListView>
		<Button Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Margin="10,10,0,0" Height="33"/>
		<Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Margin="111,10,0,0" Height="33"/>

		<Buttons:RedButton x:Name ="RedButton" Text="Close" HorizontalAlignment="Left" Margin="366,349,0,0" VerticalAlignment="Top"/>

		<Controls:LinkLabel Text="Advanced search" HorizontalAlignment="Left" Margin="376,10,0,0" VerticalAlignment="Top" Width="90"/>

		<CustomSearchTextBox:CustomSearchTextBox Name="SearchTextBox" KeyDown="UIElement_OnKeyDown" BorderThickness="1" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Width="456" Height="24"/>

	</Grid>
</baseWindow:BaseWindow>
